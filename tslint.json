{
	"extends": "tslint:latest",
	"rules": {
		"indent" : [true, "tabs"],
		"typedef-whitespace" : [false],
		"whitespace" : [false],
		"semicolon" : ["always"],
		"quotemark" : ["double"],
		"no-var-keyword" : true,
		"no-unused-variable" :[ true, "check-parameters", {"ignore-pattern": "^_\\$_"}],
		"no-trailing-whitespace":true,
		"no-consecutive-blank-lines":false,
		"object-literal-sort-keys": false,
		"no-bitwise":true,
		"max-line-length":[40],
		"eofline" : false,
		"trailing-comma" : "never",
		"curly":true,
		"forin":false,
		"one-line":[true,
			"check-catch",
			"check-else",
			"check-finally",
			"check-open-brace"
		],
		"variable-name":[true,
			"check-format",
			"allow-leading-underscore",
			"ban-keywords"
		],
		"member-access":false
	},
	"rulesDirectory": []
}